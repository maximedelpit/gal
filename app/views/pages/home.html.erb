<% if params[:has_registered] %>
  <span id='btn-has-registered' style='width: 1px; height: 1px; opacity: 0'></span>
<% end %>

<div class="col-xs-12 col-sm-6 col-sm-offset-3">
  <div class="card-wrapper">
    <!-- <h3 class='card-title text-center'><%#= t('.congrats_title', default: "Partagez. Recevez") %></h3> -->
    <div class="card-content text-center no-title">
      <div class="inside-card row">
        <div class="contact-card text-center">
          <div class="col-xs-12">
            <%= image_tag 'logo_beta.svg', class: 'img-responsive', alt: 'logo get a lead', id: 'logo' %>
          </div>
          <div class="col-xs-12 text-center">
            <%= t('.content_html') %>
          </div>
          <div class="col-xs-12 user-funnel-cta">
            <div class="text-center">
              <%= link_to t('.create_lead'), "#{create_lead_steps_path}/description"  , class: 'btn btn-success btn-round', id: 'btn-home-sell-lead' %>
            </div>
            <div class="text-center">
              <%= link_to t('.buy_lead'), "#", class: 'btn btn-success btn-round', data: buyer_sweet_data, id: 'btn-home-buy-lead' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

