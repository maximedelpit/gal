<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
  <div class="form-wrapper">
    <h3 class='form-title'><%= t(".sign_in") %></h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %><br />
          <div class='omniauth-btn-container text-center col-xs-12'>
            <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-social btn-#{provider}", id: "btn-user-#{provider}-connect#{gtm_suffix_link}" do %>
              <!-- <span class="fa fa-<%#= provider.to_s %>"></span> <%#= "Sign in with #{OmniAuth::Utils.camelize(provider)}" %> -->
            <% end -%>

          </div>
        <% end -%>
      <% end -%>
      <br><br><br><br>
      <div class="line-breaker col-xs-12">
        <div class="left-line"></div>
        OR
        <div class="right-line"></div>
      </div>
      <br>
      <br>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, wrapper_html: {class: 'col-xs-12'} %>
        <%= f.input :password, required: false, wrapper_html: {class: 'col-xs-12'} %>
        <%= f.input :remember_me, as: :boolean, wrapper_html: {class: 'col-xs-12'} if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions col-xs-12">
        <%= f.button :submit, t(".sign_in"), id: 'btn-user-login', class: 'btn-success' %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
