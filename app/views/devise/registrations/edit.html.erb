<div class="col-xs-12 col-sm-6 col-sm-offset-3">
  <div class="form-wrapper">
    <h3 class='form-title'><%= t(".title", resource: resource_class.model_name.human) %></h3>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <h4 class='form-sub-titles col-xs-12'><%= t('.profile_settings') %></h4>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true,  wrapper_html: {class: 'col-xs-12'} %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></p>
        <% end %>

        <p class='help-block col-xs-12' style='margin-top:-5px;'><%= t(".leave_blank_if_you_don_t_want_to_change_it") %></p>
        <% if resource.state == 'registered' %>
          <%= f.input :password, autocomplete: "off", required: false, wrapper_html: {class: 'col-xs-6'} %>
          <%= f.input :password_confirmation, required: false,  wrapper_html: {class: 'col-xs-6'} %>
          <%= f.input :current_password, hint: t(".we_need_your_current_password_to_confirm_your_changes"), required: true, wrapper_html: {class: 'col-xs-12'} %>
        <% end %>
      </div>

      <h4 class='form-sub-titles col-xs-12'><%= t('.profile_basics') %></h4>
      <div class="form-inputs">
        <%= f.input :first_name, wrapper_html: {class: 'col-xs-6'} %>
        <%= f.input :last_name, wrapper_html: {class: 'col-xs-6'} %>
        <%= f.input :language, collection: [['English', 'en'], ['French', 'fr']], wrapper_html: {class: 'col-xs-6'},  input_html: {class: ''} %>
        <%= f.input :location, wrapper_html: {class: 'col-xs-6'} %>
        <%= f.input :job_title, wrapper_html: {class: 'col-xs-6'} %>
        <%= f.input :phone_number, wrapper_html: {class: 'col-xs-6'} %>
        <%= f.input :company, wrapper_html: {class: 'col-xs-6'} %>

        <%= f.association :industry, collection: Industry.all.order(:name), wrapper_html: {class: 'col-xs-6'}, input_html: {class: 'select2'} %>
        <%= f.association :subcategories, collection: IndustrySubcategory.pluck(:name, :id), wrapper_html: {class: 'col-xs-12'}, input_html: {class: 'select2', multiple: true} %>
        <%= f.input :tag_list, collection: ActsAsTaggableOn::Tag.all, wrapper_html: { class: 'col-xs-12' }, input_html: {class: 'select2', multiple: true} %>

      </div>
      <div class="form-inputs col-xs-12">
        <%= f.input :nl_subscription, label: t('.nl_subscription_message'), required: false, wrapper_html: { class: '' } %>
        <%= f.input :accepts_tos, label: t('.tos_agreement_message'), required: true, wrapper_html: { class: '' } %>
      </div>
      <div class="form-actions col-xs-12">
        <%= f.button :submit, t(".update"), id: 'btn-user-update', class: 'btn-success' %>
        <p><%#= t(".unhappy") %><%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, id: 'btn-user-destroy' %></p>
        <%= link_to t("devise.shared.links.back"), :back %>
      </div>
    <% end %>

    <!-- <h3><%#= t(".cancel_my_account") %></h3> -->

  </div>
</div>
