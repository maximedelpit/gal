<div class="col-xs-12 col-sm-6 col-sm-offset-3">
  <div class="card-wrapper">
    <h3 class='card-title'><%= t(".title_#{resource.state}") %></h3>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'card-content' }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :language, required: true, collection: [['En', 'en'], ['Fr', 'fr']], label: false,  wrapper_html: {id:'language'}, input_html: {class: ''} %>
      <h4 class='card-sub-titles col-xs-12'><%= t('.profile_settings') %></h4>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true,  wrapper_html: {class: 'col-xs-12'} %>
        <%= f.input :password, autocomplete: "off", required: password_required?(resource), hint: t(".leave_blank_if_you_don_t_want_to_change_it"), wrapper_html: {class: 'col-xs-6'} %>
        <%= f.input :password_confirmation, required: password_required?(resource),  wrapper_html: {class: 'col-xs-6'} %>
        <% if resource.state == 'registered' %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></p>
          <% end %>

            <%= f.input :current_password, hint: t(".we_need_your_current_password_to_confirm_your_changes"), required: true, wrapper_html: {class: 'col-xs-12'} %>
        <% end %>
      </div>

      <h4 class='card-sub-titles col-xs-12'><%= t('.profile_basics') %></h4>
      <div class="form-inputs">
        <% if resource.state == 'registered' %>
          <%= f.input :first_name, wrapper_html: {class: 'col-xs-6'} %>
          <%= f.input :last_name, wrapper_html: {class: 'col-xs-6'} %>
          <%= f.input :location, wrapper_html: {class: 'col-xs-6'} %>
          <%= f.input :job_title, wrapper_html: {class: 'col-xs-6'} %>
          <%= f.input :phone_number, wrapper_html: {class: 'col-xs-6'} %>
          <%= f.input :company, wrapper_html: {class: 'col-xs-6'} %>
          <%= f.association :industry, collection: Industry.all.order(:name), wrapper_html: {class: 'col-xs-6'}, input_html: {class: 'select2'} %>
        <% end %>
          <%= f.input :prospect_area_ids, required: true, collection: ProspectArea.all, label_method: :to_s, value_method: :id, wrapper_html: {class: 'col-xs-12'}, input_html: {class: 'select2', multiple: true} %>
          <%= f.input :industry_subcategory_ids, required: true, collection: IndustrySubcategory.where(validated: true).all, label_method: :name, value_method: :id, wrapper_html: {class: 'col-xs-12'}, input_html: {class: 'select2', multiple: true} %>
          <%= f.input :tag_ids, collection: user_tags_collection, label_method: :name, value_method: :id, wrapper_html: {class: 'col-xs-12'}, input_html: {class: 'select2', multiple: true} %>

      </div>
      <div class="form-inputs col-xs-12">
        <%= f.input :nl_subscription, label: t('.nl_subscription_message'), required: false, wrapper_html: { class: 'xs-sz' } %>
        <%= f.input :accepts_tos, label: t('.tos_agreement_message'), required: true, wrapper_html: { class: 'xs-sz' } %>
      </div>
      <div class="form-actions col-xs-12">
        <%= f.button :submit, t(".submit"), id: 'btn-user-update', class: 'btn-success' %>
        <% if current_user.state == 'registered' %>
          <p><%#= t(".unhappy") %><%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, id: 'btn-user-destroy' %></p>
          <%= link_to t("devise.shared.links.back"), :back %>
        <% end %>
      </div>
    <% end %>

    <!-- <h3><%#= t(".cancel_my_account") %></h3> -->

  </div>
</div>
